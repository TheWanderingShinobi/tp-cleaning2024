---
// Import the <Image /> component
import { Image } from "astro:assets"
// Import a reference to the image itself
import myLogo from "@assets/logo.opti.webp"
---

<nav class="fixed top-0 z-10 w-full bg-primary">
  <div class="container flex items-center justify-between py-5 mx-auto">
    <div class="flex gap-2 item-center">

      <a href="/">
         <Image class="item-center" src={myLogo} format="avif" width="160" height="112"alt="This is the company logo" />
      </a>

      <span class="hidden py-8 text-2xl font-bold text-white md:flex"
        >The Professionals Window Cleaning.</span
      >
    </div>
    <ul
      class="hidden space-x-10 text-sm font-bold uppercase md:flex text-base-100 dark:text-gray-100"
    >
      <li class="hover:text-[#3296FF]">
        <a href="/">Home</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="services">Services</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="projects">Projects</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="about">About</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="contact">Contact</a>
      </li>
    </ul>

    <div id="hamburger" class="z-20 space-y-1 cursor-pointer md:hidden">
      <div class="w-6 h-0.5 bg-white"></div>
      <div class="w-6 h-0.5 bg-white"></div>
      <div class="w-6 h-0.5 bg-white"></div>
    </div>
    <ul
      id="menu"
      class="absolute top-0 left-0 hidden w-full p-10 space-y-10 text-center text-accent bg-primary rounded-b-3xl"
    >
      <li class="hover:text-[#3296FF]">
        <a id="hLink" href="/">Home</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a id="hlink" href="services">Services</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a id="hlink" href="projects">Projects</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a id="hlink" href="about">About</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a id="hlink" href="contact">Contact</a>
      </li>
    </ul>
  </div>
</nav>

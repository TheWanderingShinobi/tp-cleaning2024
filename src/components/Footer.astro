---
// Footer.astro
import { socialLinks, usefulLinks, serviceAreas } from '../data/site-footer-links';

const currentYear = new Date().getFullYear();
const currentYearFallback = 2024; // Fallback if date fails
---

<footer class="bg-dark text-white py-8">
    <div class="container mx-auto px-4">
      <div class="text-center mb-6">
        <h3 class="text-lg font-bold mb-2">FOLLOW US ON</h3>
        <div class="flex justify-center space-x-4">
          {socialLinks.map(link => (
            <a href={link.url} class="text-white hover:text-gray-300" aria-label={link.name}>
              <i class={`fab ${link.icon} text-2xl`}></i>
            </a>
          ))}
        </div>
      </div>
    
   
    
    <p class="text-center mb-6">
      We provide professional window cleaning and eavestrough cleaning at an affordable price.
    </p>
    
    <div class="grid md:grid-cols-4 gap-8">
      <div>
        <h4 class="font-bold mb-2">USEFUL LINKS</h4>
        <ul>
          {usefulLinks.map(link => (
            <li><a href={link.url} class="hover:underline">{link.name}</a></li>
          ))}
        </ul>
      </div>
      {serviceAreas.map((area, index) => (
        <div>
          <h4 class="font-bold mb-2">SERVICE AREAS</h4>
          <ul>
            {area.map(city => (
              <li>
                <a href={city.url} class="hover:underline">
                  {city.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-8">
      <p>&copy; {currentYear || currentYearFallback} Copyright: The Professionals Window and Eaves Cleaning Ltd.</p>
    </div>
  </div>
</footer>